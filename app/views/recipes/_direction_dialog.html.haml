.direction_form
  = nested_form_for @recipe, html: { multipart: true } do |f|
    = f.fields_for :directions do |ff|
      - if ff.object.order == direction_order
        .field
          = ff.text_area :description, rows: 3
    = f.submit '保存'
    = link_to '取消', "javascript:void(0)", { class: 'edit_direction_text_cancel' }
