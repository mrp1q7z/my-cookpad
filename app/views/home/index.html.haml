.container
  .row
    .col-md-8
      %h1 my-cookpad
      %p 毎日の料理を楽しみに

  .row
    .col-md-8
      - @recipes.each do |recipe|
        .hbox_list
          %dl
            %dt
              .image= link_to image_tag(recipe.authenticated_image_url(:thumb), size: "140x210"), recipe
            %dd
              %p= link_to recipe.title, recipe
              %p by #{link_to recipe.user.nickname, kitchen_path(recipe.user.id)}

  .row
    .col-md-8
      = paginate @recipes
