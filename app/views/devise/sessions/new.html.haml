.container
  .row
    .col-md-8
      %h2 ログイン
  .row
    .col-md-10
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .form-horizontal
          .fieldset
            .form-group
              .col-md-2
                = f.label :email, 'メールアドレス'
              .col-md-8
                = f.email_field :email, autofocus: true
            .form-group
              .col-md-2
                = f.label :password, 'パスワード'
              .col-md-8
                = f.password_field :password, autocomplete: "off"
            .form-group
              .col-md-10
                = link_to "パスワード、登録情報を忘れてしまった方", new_password_path(resource_name)
            .form-group
              .col-md-10
                - if devise_mapping.rememberable?
                  = f.check_box :remember_me
                  = f.label :remember_me
            .actions
              = f.submit "ログイン"

  .row
    .col-md-10
      %h2 ユーザー登録されていない方
      %p= link_to "ユーザー登録（無料）", new_registration_path(resource_name), class: "btn btn-primary"
