%h2 my-cookpad にユーザー登録（無料）する
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  .field
    = f.label :email, 'メールアドレス'
    %br/
    = f.email_field :email, autofocus: true
  .field
    = f.label :password, 'パスワード'
    - if @validatable
      %em
        (#{@minimum_password_length} 文字以上で入力してください)
    %br/
    = f.password_field :password, autocomplete: "off"
  .field
    = f.label :password_confirmation, 'パスワード（確認）'
    %br/
    = f.password_field :password_confirmation, autocomplete: "off"
  .field
    = f.label :zip_code, '郵便番号'
    %br/
    = f.number_field :zip_code
  .field
    = f.label :birth_date, '生年月日'
    %br/
    = f.date_field :birth_date
  .field
    = f.label :sex, '性別'
    %br/
    = f.select :sex, User.sex.options
  .actions
    = f.submit "同意して登録"
%div
  = link_to 'facebookアカウントを使って登録', user_omniauth_authorize_path(:facebook)
= render "devise/shared/links"
